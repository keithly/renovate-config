{
  "extends": ["config:base"],
  "packageRules": [
    {
      "platformCommit": true
    },
    {
      "matchPackagePatterns": ["boto"],
      "groupName": "boto",
      "extends": ["schedule:monthly"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr",
    "platformAutomerge": true
  },
  "pip_requirements": {
    "fileMatch": ["^requirements"]
  }
}
